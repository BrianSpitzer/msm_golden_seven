<h1>Add a new director</h1>

<form action="/create_director">
    <div>
        <label for="name">
            Name
        </label>

        <input id="name" type="text" name="the_name">
    </div>
    
    <div>
        <label for="dob">
            Birthdate
        </label>

        <input id="dob" type="text" name="the_dob">
    </div>
    
    <div>
        <label for="bio">
            Biography
        </label>

        <input id="bio" type="text" name="the_bio">
    </div>
    
    <div>
        <label for="image url">
            Image URL
        </label>

        <input id="image url" type="text" name="the_image_url">
    </div>

  <button>
    Create director
  </button>
</form>
