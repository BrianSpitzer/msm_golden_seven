<h1>Edit director</h1>

<form action="/update_director/<%= @director.id %>">
    <div>
        <label for="name_input">
            Name
        </label>

        <input id="name_input" type="text" name="the_name" value="<%= @director.name %>">
    </div>
    
    <div>
        <label for="dob_input">
            Birthdate
        </label>

        <input id="dob_input" type="text" name="the_dob" value="<%= @director.dob %>">
    </div>
    
    <div>
        <label for="bio_input">
            Biography
        </label>

        <input id="bio_input" type="text" name="the_bio" value="<%= @director.bio %>">
    </div>
    
    <div>
        <label for="image_url_input">
            Image URL
        </label>

        <input id="image_url_input" type="text" name="the_image_url" value="<%= @director.image_url %>">
    </div>

  <button>
    Update director
  </button>
</form>
