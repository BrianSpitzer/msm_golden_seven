<h1>Edit movie</h1>

<form action="/update_movie/<%= @movie.id %>">
    <div>
        <label for="title">
            Title
        </label>

        <input id="title" type="text" name="the_title" value="<%= @movie.title %>">
    </div>
    
    <div>
        <label for="year">
            Year
        </label>

        <input id="year" type="text" name="the_year" value="<%= @movie.year %>">
    </div>
    
    <div>
        <label for="duration">
            Duration
        </label>

        <input id="duration" type="text" name="the_duration" value="<%= @movie.duration %>">
    </div>

    <div>
        <label for="description">
            Description
        </label>

        <textarea rows="10" cols="50" id="description" name="the_description">
            <%= @movie.description.strip %>
        </textarea> 
    </div>
    
    <div>
        <label for="image url">
            Image url
        </label>

        <input id="image url" type="text" name="the_image_url" value="<%= @movie.image_url %>">
    </div>

  <button>
    Update movie
  </button>
</form>
