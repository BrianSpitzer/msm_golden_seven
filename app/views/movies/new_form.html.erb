<h1>Add a new movie</h1>

<form action="/create_movie">
    <div>
        <label for="title">
            Title
        </label>

        <input id="title" type="text" name="the_title">
    </div>
    
    <div>
        <label for="year">
            Year
        </label>

        <input id="year" type="text" name="the_year">
    </div>
    
    <div>
        <label for="duration">
            Duration
        </label>

        <input id="duration" type="text" name="the_duration">
    </div>

    <div>
        <label for="description">
            Description
        </label>

        <input id="description" type="text" name="the_description">
    </div>
    
    <div>
        <label for="image url">
            Image url
        </label>

        <input id="image url" type="text" name="the_image_url">
    </div>

  <button>
    Create movie
  </button>
</form>
