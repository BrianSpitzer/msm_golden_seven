<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Actor Details</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-2">
            <p>Name</p>
        </div>
        <div class="col-md-10">
            <p>
                <%= @actor.name %>
            </p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-2">
            <p>Birthdate</p>
        </div>
        <div class="col-md-10">
            <p>
                <%= @actor.dob %>
            </p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-2">
            <p> Biography</p>
        </div>
        <div class="col-md-10">
            <p>
                <%= @actor.bio %>
            </p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-2">
            <p>Picture</p>
        </div>
        <div class="col-md-10">
            <p>
                <img src="<%= @actor.image_url %>">
            </p>
        </div>
        <div class="col-md-2">
            <p>
                Image URL
            </p>
        </div>  
        <div class="col-md-10">
            <p>
                <%= @actor.image_url %>
            </p>
        </div>          
    </div>
</div>

<a href="/actors" class="btn btn-default">
  Go back
</a>

<a href="/actors/<%= @actor.id %>/edit" class="btn btn-default">
  Edit actor
</a>

<a href="/delete_actor/<%= @actor.id %>" class="btn btn-default">
  Delete actor
</a>
