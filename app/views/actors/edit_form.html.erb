<h1>Edit actor</h1>

<form action="/update_actor/<%= @actor.id %>">
    <div>
        <label for="name">
            Name
        </label>

        <input id="name" type="text" name="the_name" value="<%= @actor.name %>">
    </div>
    
    <div>
        <label for="dob">
            Dob
        </label>

        <input id="dob" type="text" name="the_dob" value="<%= @actor.dob %>">
    </div>
    
    <div>
        <label for="bio">
            Bio
        </label>

        <input id="bio" type="text" name="the_bio" value="<%= @actor.bio.strip %>">
    </div>
    
    <div>
        <label for="image url">
            Image url
        </label>

        <input id="image url" type="text" name="the_image_url" value="<%= @actor.image_url %>">
    </div>

  <button>
    Update actor
  </button>
</form>
