<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>All Actors</h1>
        </div>
    </div>
  
    <div class="row">
        <div class="col-md-12">
            <a href="/actors/new">Add a new actor</a>
        </div>
    </div>

  <% @list_of_actors.each do |the_actor| %>
    <div class="well well-lg">
        <div class="row">
            <div class="col-md-3">Picture</div>
            <div class="col-md-2">Name</div>
            <div class="col-md-2">Birthdate</div>
            <div class="col-md-5">Biography</div>
        </div>
    
        <div class="row">
            <div class="col-md-3">
                <img src="<%= the_actor.image_url %>" class="thumbnail">
                <!--<%= the_actor.image_url %>-->
            </div>
            <div class="col-md-2">
                <%= the_actor.name %>
            </div>
            <div class="col-md-2">
                <%= the_actor.dob %>
            </div>
            <div class="col-md-5">
                <%= the_actor.bio %>
            </div>
            <div class = "col-md-2">
                Image URL
            </div>
            <div class = "col-md-10">
                <%= the_actor.image_url %>
            </div>
        </div>
        
        <div class="row">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default">
                    <a href="/actors/<%= the_actor.id %>">Show details</a>
                </button>
                
                <button type="button" class="btn btn-default">
                    <a href="/actors/<%= the_actor.id %>/edit">Edit details</a>
                </button>
                
                <button type="button" class="btn btn-default">
                    <a href="/delete_actor/<%= the_actor.id %>">Delete actor</a>
                </button>
            </div>
        </div>
    </div>
  <%end %>
</div>